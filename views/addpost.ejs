<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ready to write?</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <%- include ('./partials/nav') %>
        <div class="content">
            <div class="spacer"></div>

            <div class="logo">
                <b>admin area</b>
            </div>
            <div class="spacer"></div>

            <div class="spacer"></div>


            <div class="wrap">
                <div class="spacer"></div>

                <h4>Ready to write?</h2>
                    <div class="spacer"></div>
                    <form id="form" action="/addpost" method="post">
                        <!-- <input type="text" name="title" id="postTitle">
                <input type="text" name="description" id="postDescr">                 -->
                        <!-- <input type="submit" value="testButton"> -->

                        <div class="mb-3">
                            <label for="slug" class="form-label">Slug</label>
                            <input name="postSlug" type="text" class="form-control" id="postSlug" placeholder="" required>
                        </div>
                        <div class="mb-3">
                            <label for="postTitle" class="form-label">Title</label>
                            <input name="postTitle" type="text" class="form-control" id="postTitle" placeholder="">
                        </div>
                        <div id="shoutTitleStatus" class="invalidInput"></div>
                        <div class="mb-3">
                            <label for="postDescr" class="form-label">Description</label>
                            <textarea name="postDescr" class="form-control" id="postDescr" rows="3"></textarea>
                        </div>
                        <div id="shoutDescriptionStatus" class="invalidInput"></div>
                        <div class="spacer"></div>
                        <div id="showStatus"></div>
                        <div class="spacer"></div>

                        <div class="spacer"></div>

                        <div id="shoutStatus"></div>
                        <div class="spacer"></div>
                        <button id="addPost" class="btn btn-outline-primary">Add Post</button>
                        <div class="spacer"></div>

                        <a href="http://localhost:4000/">show all posts</a>

                    </form>

            </div>
            <div class="spacer"></div>
            <div class="spacer"></div>

            <div class="wrap">

                <div id="testingPurpose">
                    <b>affiliate link maker</b>
                    <input id="testingLink" type="text" placeholder="product link">
                    <input id="testingTag" value="mysite-20" type="text" placeholder="tag">
                    <button id="affTagMaker" class="btn btn-outline-primary">Go</button>
                    <div id="affTag"></div>
                    <div id="affTagStatus"></div>
                </div>

            </div>

            <div class="spacer"></div>
            <div class="spacer"></div>

        </div>

        <%- include ('./partials/footer') %>
            <script src="addpost.js"></script>
</body>

</html>